@IfNotNull.Context.CurrentUser
<div id="dlw_hello">
	<span>User: @!Context.CurrentUser.UserName</span>
	<a href="@Path['~/logout']"><span>Logout</span></a>
	<span class="dlw_currentplayer" data-player-realm="@!Model.Server.CurrentPlayerRealm">Current Player: <span>@!Model.Server.CurrentPlayerName</span>
</div>
@EndIf